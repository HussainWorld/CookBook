<!-- views/applications/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editing <%= recipe.title %></title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Edit <%= recipe.title %> at <%= recipe.company %></h1>
<!-- We'll use method-override to allow us to hit a put route: -->
<form
  action="/users/<%= user._id %>/recipes/<%= recipe._id %>?_method=PUT"
  method="POST"
>
      <!-- Title -->
      <label for="title">Recipe Title:</label>
      <input type="text" id="title" name="title" value="<%= recipe.title %>" required />
      <br />

       <!-- Ingredients -->
     <label for="ingredient">Ingredients:</label>
     <textarea id="ingredient" name="ingredient" rows="4" cols="50" required ><%= recipe.ingredient %></textarea>
     <br>

      <!-- Instructions -->
      <label for="instructions">Instructions:</label>
      <textarea id="instructions" name="instructions" rows="4" cols="50" required ><%= recipe.instructions %></textarea>
      <br />

      <!-- Category -->
      <label for="category">Category:</label>
      <select id="category" name="category" required>
        <option value="">--Select Category--</option>
        <option  value="BreakFast"  <%=recipe.category==='BreakFast' ? 'selected' : '' %>>Breakfast</option>
        <option value="Lunch" <%=recipe.category==='Lunch' ? 'selected' : '' %>>Lunch</option>
        <option value="Dinner" <%=recipe.category==='Dinner' ? 'selected' : '' %>>Dinner</option>
        <option value="Snack" <%=recipe.category==='Snack' ? 'selected' : '' %>>Snack</option>
        <option value="Desserts" <%=recipe.category==='Desserts' ? 'selected' : '' %>>Desserts</option>
      </select>
      <br />

      <!-- Image URL -->
      <label for="iamgeUrl">Image URL:</label>
      <input type="file" id="iamgeUrl" name="iamgeUrl" />
      <br />

      <!-- Submit Button -->
      <button type="submit">Update the recipe</button>
    </form>

</body>
</html>
